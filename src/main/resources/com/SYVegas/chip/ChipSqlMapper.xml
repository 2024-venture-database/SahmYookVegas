<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SYVegas.chip.ChipMapper">

    <resultMap id="chipResultMap" type="com.SYVegas.chip.Chip">
        <id property="id" column="chip_id"/>
        <result property="type" column="chip_type"/>
        <result property="value" column="chip_value"/>
        <result property="quantity" column="chip_quantity"/>
    </resultMap>

    <select id="selectAllChips" resultMap="chipResultMap">
        SELECT *
        FROM chips
    </select>

    <select id="selectChipsByType" parameterType="java.lang.String" resultMap="chipResultMap">
        SELECT *
        FROM chips
        WHERE chip_type = #{type}
    </select>

    <insert id="insertChip" parameterType="com.SYVegas.chip.Chip">
        INSERT INTO chips (chip_type, chip_value, chip_quantity)
        VALUES (#{type}, #{value}, #{quantity})
    </insert>

    <update id="updateChip" parameterType="com.SYVegas.chip.Chip">
        UPDATE chips
        SET chip_value = #{value}, chip_quantity = #{quantity}
        WHERE chip_id = #{id}
    </update>

    <delete id="deleteChip" parameterType="int">
        DELETE FROM chips
        WHERE chip_id = #{id}
    </delete>

</mapper>
